{% extends '@Backoffice/base.html.twig' %}

{% block content %}
    <div class="formulaire">
        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">CRUD ELEMENTS</div>
                        <div class="panel-body">
                            <div class="col-md-6">
                                <table class="table table-bordered">
                                    {% for c in  Employee %}
                                        <tr>
                                            <td> {{ c.id }}</td>
                                            <td> {{ c.Name }}</td>
                                            <td> {{ c.fonction }}</td>
                                            <td>
                                                <a href="{{ path('updateEmployee',{'id':c.id}) }}" >
                                                    <button class="btn btn-primary">UPDATE</button>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="{{ path('deleteEmployee',{'id':c.id}) }}" >
                                                    <button class="btn btn-primary">DELETE</button>
                                                </a></td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div><!--/.main-->
    </div>
{% endblock %}

