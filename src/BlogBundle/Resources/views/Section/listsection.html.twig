{% extends '@Blog/base.html.twig' %}
{% block content %}

    <link href="{{ asset('blog_assets/css/bootstrap.min.css') }}" rel="stylesheet" id="bootstrap-css">
    <script src="{{ asset('blog_assets/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('blog_assets/js/jquery-1.12.1.min.js') }}"></script>
    <!------ Include the above in your HEAD tag ---------->

    <div class="container">
        <div class="row col-md-6 col-md-offset-2 custyle">
            <table class="table table-striped custab">
                <thead>
                <a href="{{ path('add_section') }}" class="btn btn-primary btn-xs pull-right"><b>+</b> Add new section</a>
                <tr>

                    <th>Title</th>

                    <th class="text-center">Action</th>
                </tr>
                </thead>
                {% for sections in sections %}
                    {% block section %}
                        <tr>
                            <td> {{sections.title}}</td>

                            <td class="text-center"><a class='btn btn-info btn-xs' href="{{ path('update_section',{'id':sections.id}) }}"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="{{ path('delete_section',{'id':sections.id}) }}" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                        </tr>
                    {% endblock%}
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
