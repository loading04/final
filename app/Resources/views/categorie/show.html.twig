{% block content %}
    <h1>Categorie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id_categorie</th>
                <td>{{ categorie.idcategorie }}</td>
            </tr>
            <tr>
                <th>Nomcategorie</th>
                <td>{{ categorie.nomCategorie }}</td>
            </tr>
            <tr>
                <th>Descriptioncategorie</th>
                <td>{{ categorie.descriptionCategorie }}</td>
            </tr>
